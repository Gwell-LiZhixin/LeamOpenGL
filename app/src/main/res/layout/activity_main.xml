<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_drawTriangle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="绘制三角形"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_drawRectangle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="绘制一个旋转的矩形"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_drawTriangle" />

    <Button
        android:id="@+id/btn_drawCube"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="绘制一个旋转立方体"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_drawRectangle" />

</androidx.constraintlayout.widget.ConstraintLayout>